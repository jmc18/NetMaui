<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoUI.Screens.NotesScreen"
             Title="NotesScreen">

    <VerticalStackLayout Margin="30" Spacing="10">
        <Label Text="Notes" HorizontalOptions="Center" FontAttributes="Bold" />
        <Editor x:Name="editor" Placeholder="Enter your note" HeightRequest="200" />

        <Grid ColumnDefinitions="Auto, Auto" HorizontalOptions="Center"
              ColumnSpacing="30">
            <Button Grid.Column="0"
                    Text="Save"
                    WidthRequest="100"
                    Clicked="OnSaveButtonClick"
                    TextColor="White"
                    BackgroundColor="Black"/>

            <Button Grid.Column="1"
                    Text="Delete"
                    WidthRequest="100"
                    Clicked="OnSaveDeleteClick"
                    TextColor="White"
                    BackgroundColor="Black"/>
        </Grid>
        
    </VerticalStackLayout>

</ContentPage>