<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DemoUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DemoUI"
    xmlns:screens="clr-namespace:DemoUI.Screens"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Notes"
        ContentTemplate="{DataTemplate screens:NotesScreen}"
        Route="NotesScreens" />
    <ShellContent 
        Title="Grid Tip Calculator"
        ContentTemplate="{DataTemplate screens:GridTipCalculatorScreen}"
        Route="GridTipScreen"/>

</Shell>
